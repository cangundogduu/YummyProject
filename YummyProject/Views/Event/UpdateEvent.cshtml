@model YummyProject.Models.Event
@{
    ViewBag.Title = "UpdateEvent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Güncelle</h2>

<form method="post">
    @Html.HiddenFor(x => x.EventId)

    <label>Foto Url</label>
    @Html.TextBoxFor(a => a.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(a => a.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(a => a.Description, new { @class = "form-control" })
    <br />
    <label>Fiyat</label>
    @Html.TextBoxFor(a => a.Price, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>

</form>

