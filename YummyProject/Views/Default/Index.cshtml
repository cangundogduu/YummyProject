
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<!-- Feature Section -->
@Html.Action("DefaultFeature")
<!-- /Feature Section -->

<!-- About Section -->
@Html.Action("DefaultAbout")
<!-- /About Section -->


<!-- Service Section -->
@Html.Action("DefaultService")<!-- /Why Us Section -->
<!-- Stats Section -->
<section id="stats" class="stats section dark-background">

    <img src="~/Templates/yummy-red-1.0.0/assets/img/stats-bg.jpg" alt="" data-aos="fade-in">

    <div class="container position-relative" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span>@ViewBag.eventCount</span>
                    <p>Etkinlik Sayısı</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span>@ViewBag.chefCount</span>
                    <p>Şeflerimiz</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span>@ViewBag.productCount</span>
                    <p>Toplam Ürün Sayısı</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span>@ViewBag.avgPrice.ToString("0.00") TL</span>
                    <p>Ortalama Ürün Fiyatı</p>
                </div>
            </div><!-- End Stats Item -->

        </div>

    </div>

</section><!-- /Stats Section -->
<!-- Product Section -->
@Html.Action("DefaultProduct")
<!-- /Product Section -->
<!-- Testimonials Section -->
@Html.Action("DefaultTestimonial")
<!-- /Testimonials Section -->
<!-- Events Section -->
@Html.Action("DefaultEvent")
<!-- /Events Section -->
<!-- Chefs Section -->
@Html.Action("DefaultChef")
<!-- /Chefs Section -->
<!-- Booking Section -->
@Html.Action("DefaultBooking")<!-- /Book A Table Section -->
<!-- Photo Gallery Section -->
<section id="gallery" class="gallery section light-background">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Yummy Özel Anlar</h2>
        <p><span>Galerimize</span> <span class="description-title">Göz Atın</span></p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="swiper init-swiper">
            <script type="application/json" class="swiper-config">
                {
                  "loop": true,
                  "speed": 600,
                  "autoplay": {
                    "delay": 5000
                  },
                  "slidesPerView": "auto",
                  "centeredSlides": true,
                  "pagination": {
                    "el": ".swiper-pagination",
                    "type": "bullets",
                    "clickable": true
                  },
                  "breakpoints": {
                    "320": {
                      "slidesPerView": 1,
                      "spaceBetween": 0
                    },
                    "768": {
                      "slidesPerView": 3,
                      "spaceBetween": 20
                    },
                    "1200": {
                      "slidesPerView": 5,
                      "spaceBetween": 20
                    }
                  }
                }
            </script>
            <div class="swiper-wrapper align-items-center">
                <div class="swiper-slide"><a class="glightbox" data-gallery="images-gallery" href="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-1.jpg"><img src="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-1.jpg" class="img-fluid" alt=""></a></div>
                <div class="swiper-slide"><a class="glightbox" data-gallery="images-gallery" href="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-2.jpg"><img src="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-2.jpg" class="img-fluid" alt=""></a></div>
                <div class="swiper-slide"><a class="glightbox" data-gallery="images-gallery" href="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-3.jpg"><img src="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-3.jpg" class="img-fluid" alt=""></a></div>
                <div class="swiper-slide"><a class="glightbox" data-gallery="images-gallery" href="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-4.jpg"><img src="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-4.jpg" class="img-fluid" alt=""></a></div>
                <div class="swiper-slide"><a class="glightbox" data-gallery="images-gallery" href="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-5.jpg"><img src="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-5.jpg" class="img-fluid" alt=""></a></div>
                <div class="swiper-slide"><a class="glightbox" data-gallery="images-gallery" href="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-6.jpg"><img src="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-6.jpg" class="img-fluid" alt=""></a></div>
                <div class="swiper-slide"><a class="glightbox" data-gallery="images-gallery" href="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-7.jpg"><img src="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-7.jpg" class="img-fluid" alt=""></a></div>
                <div class="swiper-slide"><a class="glightbox" data-gallery="images-gallery" href="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-8.jpg"><img src="~/Templates/yummy-red-1.0.0/assets/img/gallery/gallery-8.jpg" class="img-fluid" alt=""></a></div>
            </div>
            <div class="swiper-pagination"></div>
        </div>

    </div>

</section><!-- /Gallery Section -->
