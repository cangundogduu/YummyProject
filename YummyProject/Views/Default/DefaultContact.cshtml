@model YummyProject.Models.ContactInfo

<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>İletişim</h2>
        <p><span>Bizimle</span> <span class="description-title">İleişime Geçin</span></p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="mb-5">
            <iframe style="width: 100%; height: 400px;" src="@Model.MapUrl" frameborder="0" allowfullscreen=""></iframe>
        </div><!-- End Google Maps -->

        <div class="row gy-4">

            <div class="col-md-6">
                <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="200">
                    <i class="icon bi bi-geo-alt flex-shrink-0"></i>
                    <div>
                        <h3>İletişim Adresi</h3>
                        <p>@Model.Address</p>
                    </div>
                </div>
            </div><!-- End Info Item -->

            <div class="col-md-6">
                <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="300">
                    <i class="icon bi bi-telephone flex-shrink-0"></i>
                    <div>
                        <h3>İletişim Numaramız</h3>
                        <p>@Model.PhoneNumber</p>
                    </div>
                </div>
            </div><!-- End Info Item -->

            <div class="col-md-6">
                <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="400">
                    <i class="icon bi bi-envelope flex-shrink-0"></i>
                    <div>
                        <h3>Email Adresimiz</h3>
                        <p>@Model.Email</p>
                    </div>
                </div>
            </div><!-- End Info Item -->

            <div class="col-md-6">
                <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="500">
                    <i class="icon bi bi-clock flex-shrink-0"></i>
                    <div>
                        <h3>Açılış Saatlerimiz<br></h3>
                        <p><strong>Pazartesi-Cumartesi:</strong> @Model.OpenHours <strong>Pazar:</strong> Kapalı</p>
                    </div>
                </div>
            </div><!-- End Info Item -->

        </div>

        <!-- message Item -->
        @Html.Action("DefaultMessage")
        <!-- message Item end -->
        <!-- End Contact Form -->

    </div>

</section>
