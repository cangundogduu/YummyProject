@model List<YummyProject.Models.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referanslar</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Foto Url</th>
        <th>Ad Soyad</th>
        <th>Yorum</th>
        <th>Puan</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {


        <tr>
            <td>@item.TestimonialId</td>
            <td><img src="@item.ImageUrl" style="width:50px;height:50px;" /></td>
            <td>@item.NameSurname</td>
            <td>@item.Comment</td>
            <td>@item.Rating</td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/Testimonial/CreateTestimonial" class="btn btn-primary">Yeni Referans Ekle</a>

