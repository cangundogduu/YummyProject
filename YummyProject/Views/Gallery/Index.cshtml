@model List<YummyProject.Models.PhotoGallery>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Resim Galerisi</h2>

<br />

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Resim Url</th>


    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PhotoGalleryId</td>
            <td><img src="@item.ImageUrl" style="width:60px;height:40px" /></td>



            <td><a href="/Gallery/DeleteGallery/@item.PhotoGalleryId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Gallery/UpdateGallery/@item.PhotoGalleryId" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Gallery/AddGallery" class="btn btn-success">Yeni Resim Ekle</a>